<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/hebrwKeyboardView" android:layout_width="fill_parent"
	android:layout_alignParentBottom="true" android:layout_below="@+id/xsubLayout"
	android:background="#252625" android:visibility="visible"
	android:layout_height="180sp">
	<TableLayout 
		android:layout_width="fill_parent" android:layout_height="130sp"
		android:layout_alignParentBottom="true" android:clipChildren="false"

		android:layout_gravity="center_vertical|center_horizontal|bottom"
		android:fitsSystemWindows="true" android:orientation="horizontal">
		<TableLayout
			android:layout_width="fill_parent" android:layout_height="130sp"
			android:layout_gravity="center_vertical|center_horizontal|bottom"
			android:orientation="vertical">
			<TableRow android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:layout_gravity="center_horizontal|center_vertical|center"

				android:orientation="horizontal" android:stretchColumns="true">
				<LinearLayout android:baselineAligned="true"
					android:layout_width="fill_parent" android:layout_gravity="center"
					android:layout_height="45sp" android:fitsSystemWindows="true"

					android:orientation="horizontal">
					<Button android:id="@+id/xQ" android:layout_width="53dp"
						android:layout_height="fill_parent" android:text="q"
						android:textColor="#ffffff" 
						android:layout_gravity="center_horizontal" android:onClick="q" />

					<Button
					    android:id="@+id/xW"
					    android:onClick="w"
					    android:layout_width="53dp"
					    android:layout_height="fill_parent"
					    android:layout_gravity="left"
					    android:ellipsize="marquee"
					    android:soundEffectsEnabled="true"
					    android:tag="w"
					    android:text="w"
					    android:textColor="#ffffff" />

					<Button android:soundEffectsEnabled="true" android:id="@+id/xE" android:onClick="e"
						android:layout_gravity="center_horizontal" android:layout_width="53dp"
						android:layout_height="fill_parent" android:text="e" android:tag="e"
						android:textColor="#ffffff" android:fitsSystemWindows="true"
						android:ellipsize="marquee" />
					<Button android:soundEffectsEnabled="true" android:id="@+id/xR" android:onClick="r"
						android:layout_width="53dp" android:layout_gravity="center_horizontal"
						android:layout_height="fill_parent" android:text="r" android:tag="r"
						android:textColor="#ffffff" android:fitsSystemWindows="true"
						android:ellipsize="marquee" />
					<Button android:soundEffectsEnabled="true" android:id="@+id/xT" android:onClick="t"
						android:layout_width="53dp" android:layout_height="fill_parent"
						android:layout_gravity="center_horizontal" android:text="t"
						android:tag="t" android:fitsSystemWindows="true"
						android:textColor="#ffffff" android:ellipsize="marquee" />
					<Button android:soundEffectsEnabled="true" android:id="@+id/xY" android:onClick="y"
						android:layout_width="53dp" android:layout_height="fill_parent"
						android:layout_gravity="center_horizontal" android:text="y"
						android:tag="y" android:fitsSystemWindows="true"
						android:textColor="#ffffff" android:ellipsize="marquee"/>
					<Button android:soundEffectsEnabled="true" android:id="@+id/xU" android:onClick="u"
						android:layout_width="53dp" android:layout_gravity="center_horizontal"
						android:layout_height="fill_parent" android:text="u" android:tag="u"
						android:textColor="#ffffff" android:fitsSystemWindows="true" 
						android:ellipsize="marquee" />
					<Button android:soundEffectsEnabled="true" android:id="@+id/xI"
						android:layout_width="53dp" android:layout_height="fill_parent" android:onClick="i"
						android:text="i" android:fitsSystemWindows="true" android:tag="i"
						android:textColor="#ffffff" android:layout_gravity="center_horizontal"
						android:ellipsize="marquee" />
					<Button android:soundEffectsEnabled="true" android:id="@+id/xO"
						android:layout_width="53dp" android:layout_height="fill_parent"
						android:text="o" android:fitsSystemWindows="true" android:tag="0" android:onClick="o"
						android:textColor="#ffffff" android:layout_gravity="center_horizontal"
						android:ellipsize="marquee" />
					<Button android:soundEffectsEnabled="true" android:id="@+id/xP"
						android:layout_width="53dp" android:layout_height="fill_parent"
						android:textColor="#ffffff" android:text="p" android:onClick="p"
						android:fitsSystemWindows="true" android:tag="p"
						android:layout_gravity="center_horizontal" android:ellipsize="marquee" />
				</LinearLayout>
			</TableRow>
			<TableRow android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:clipChildren="true"
				android:layout_gravity="center_horizontal|center_vertical|center"
				android:fitsSystemWindows="true" android:orientation="horizontal">
				<RelativeLayout android:layout_width="fill_parent"
					android:clipChildren="true" android:layout_height="45sp"
					android:layout_gravity="center_horizontal|center" android:gravity="bottom"

					android:orientation="horizontal">
					<Button android:layout_alignWithParentIfMissing="true"
						android:soundEffectsEnabled="true" android:id="@+id/xA"
						android:layout_width="53dp"
						android:layout_centerHorizontal="true" android:tag="a"
						android:layout_gravity="center_horizontal|center_vertical|center"
						android:textColor="#ffffff" android:layout_height="fill_parent"
						android:text="a" android:layout_alignParentLeft="true"
						android:fitsSystemWindows="true" android:onClick="a"/>
					<Button android:layout_centerHorizontal="true"
						android:soundEffectsEnabled="true" android:layout_toRightOf="@id/xA"
						android:id="@+id/xS" android:layout_width="53dp"
						android:tag="s" android:layout_gravity="center_horizontal|center_vertical|center"
						android:layout_height="fill_parent" android:text="s" android:onClick="s"
						android:textColor="#ffffff"
						android:layout_alignWithParentIfMissing="true"
						android:fitsSystemWindows="true" />
					<Button android:layout_alignWithParentIfMissing="true"
						android:layout_centerHorizontal="true"
						android:soundEffectsEnabled="true" android:id="@+id/xD"
						android:layout_toRightOf="@id/xS" android:layout_width="53dp" android:onClick="d"
						android:layout_gravity="center_horizontal|center_vertical|center"
						android:textColor="#ffffff" android:tag="d" android:layout_height="fill_parent"
						android:text="d" android:fitsSystemWindows="true" />
					<Button android:layout_alignWithParentIfMissing="true"
						android:layout_centerHorizontal="true"
						android:soundEffectsEnabled="true" android:id="@+id/xF"
						android:layout_toRightOf="@id/xD" android:layout_width="53dp"
						android:tag="f" android:layout_gravity="center_horizontal|center_vertical|center"
						android:layout_height="fill_parent" android:text="f" android:onClick="f"
						android:textColor="#ffffff" android:fitsSystemWindows="true" />
					<Button android:layout_alignWithParentIfMissing="true"
						android:layout_centerHorizontal="true"
						android:soundEffectsEnabled="true" android:id="@+id/xG"
						android:layout_toRightOf="@id/xF" android:layout_width="53dp"
						android:textColor="#ffffff" android:layout_height="fill_parent" android:onClick="g"
						android:layout_gravity="center_horizontal|center_vertical|center"
						android:tag="g" android:text="g" android:fitsSystemWindows="true" />
					<Button android:layout_alignWithParentIfMissing="true"
						android:layout_centerHorizontal="true"
						android:soundEffectsEnabled="true" android:id="@+id/xH"
						android:layout_toRightOf="@id/xG" android:layout_width="53dp"
						android:tag="h" android:layout_height="fill_parent" android:onClick="h"
						android:textColor="#ffffff" android:layout_gravity="center_horizontal|center_vertical|center"
						android:text="h" android:fitsSystemWindows="true" />
					<Button android:layout_alignWithParentIfMissing="true"
						android:layout_centerHorizontal="true"
						android:soundEffectsEnabled="true" android:id="@+id/xJ"
						android:layout_toRightOf="@id/xH" android:layout_width="53dp" android:onClick="j"
						android:textColor="#ffffff" android:layout_height="fill_parent"
						android:layout_gravity="center_horizontal|center_vertical|center"
						android:tag="j" android:text="j" android:fitsSystemWindows="true" />
					<Button android:layout_alignWithParentIfMissing="true"
						android:layout_centerHorizontal="true"
						android:soundEffectsEnabled="true" android:id="@+id/xK"
						android:textColor="#ffffff" android:layout_toRightOf="@id/xJ"
						android:layout_width="53dp" android:layout_height="fill_parent" android:onClick="k"
						android:layout_gravity="center_horizontal|center_vertical|center"
						android:tag="k" android:text="k" android:fitsSystemWindows="true" />
					<Button android:layout_alignWithParentIfMissing="true"
						android:layout_centerHorizontal="true"
						android:soundEffectsEnabled="true" android:id="@+id/xL"
						android:textColor="#ffffff" android:layout_toRightOf="@id/xK" android:onClick="l"
						android:layout_width="53dp" android:layout_height="fill_parent"
						android:layout_gravity="center_horizontal|center_vertical|center"
						android:tag="l" android:text="l" android:fitsSystemWindows="true" />
					<ImageButton android:layout_alignWithParentIfMissing="true"
						android:layout_centerHorizontal="true"
						android:soundEffectsEnabled="true" android:id="@+id/xS1"
						android:layout_toRightOf="@id/xL" android:layout_width="53dp"
						android:textColor="#ffffff" android:layout_height="fill_parent" 
						android:layout_gravity="center_horizontal|center_vertical|center" android:onClick="backspace"
						android:tag="รง" android:src="@drawable/sym_keyboard_delete" android:fitsSystemWindows="true" />
				</RelativeLayout>
			</TableRow>
			<TableRow android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:layout_gravity="center_horizontal|center_vertical|center"
				android:fitsSystemWindows="true" android:orientation="horizontal">
				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="45sp" android:layout_gravity="center_horizontal|center"

					android:gravity="bottom" android:orientation="horizontal">
					
				    <ToggleButton 
				        android:layout_width="53dp" android:layout_height="fill_parent" android:src="@drawable/caps" android:id="@+id/caps"
				        android:textOn="cap" android:textOff="cap"
				        />
				    
					<ToggleButton android:soundEffectsEnabled="true" android:id="@+id/fn" android:onClick="fn"
						android:layout_width="53dp" android:layout_gravity="center_horizontal|center_vertical|center"
						android:layout_height="fill_parent" android:textOn="FN" android:textOff="FN" android:tag="z"
						android:textColor="#ffffff" android:fitsSystemWindows="true" />
					
					<Button android:soundEffectsEnabled="true" android:id="@+id/xZ" android:onClick="z"
						android:layout_width="53dp" android:layout_gravity="center_horizontal|center_vertical|center"
						android:layout_height="fill_parent" android:text="z" android:tag="z"
						android:textColor="#ffffff" android:fitsSystemWindows="true" />
					<Button android:soundEffectsEnabled="true" android:id="@+id/xX" android:onClick="x"
						android:layout_width="53dp" android:layout_gravity="center_horizontal|center_vertical|center"
						android:tag="x" android:layout_height="fill_parent" android:text="x"
						android:textColor="#ffffff" android:fitsSystemWindows="true" />
					<Button android:soundEffectsEnabled="true" android:id="@+id/xC" android:onClick="c"
						android:layout_width="53dp" android:layout_gravity="center_horizontal|center_vertical|center"
						android:tag="c" android:layout_height="fill_parent" android:text="c"
						android:textColor="#ffffff" android:fitsSystemWindows="true" />
					<Button android:soundEffectsEnabled="true" android:id="@+id/xV" android:onClick="v"
						android:layout_width="53dp" android:layout_height="fill_parent"
						android:layout_gravity="center_horizontal|center_vertical|center"
						android:textColor="#ffffff" android:tag="v" android:text="v"
						android:fitsSystemWindows="true" />
					<Button android:soundEffectsEnabled="true" android:id="@+id/xB" android:onClick="b"
						android:layout_width="53dp" android:layout_height="fill_parent"
						android:textColor="#ffffff" android:layout_gravity="center_horizontal|center_vertical|center"
						android:tag="b" android:text="b" android:fitsSystemWindows="true" />
					<Button android:soundEffectsEnabled="true" android:id="@+id/xN"
						android:layout_width="53dp" android:layout_height="fill_parent" android:onClick="n"
						android:layout_gravity="center_horizontal|center_vertical|center"
						android:textColor="#ffffff" android:tag="n" android:text="n"
						android:fitsSystemWindows="true" />
					<Button android:soundEffectsEnabled="true" android:id="@+id/xM"
						android:layout_width="53dp" android:layout_height="fill_parent"
						android:layout_gravity="center_horizontal|center_vertical|center" android:onClick="m"
						android:textColor="#ffffff" android:tag="m" android:text="m"
						android:fitsSystemWindows="true" />
					
					<ImageButton android:layout_width="53dp" android:layout_height="fill_parent"  android:src="@drawable/enter" android:onClick="enter"/>
					
				</LinearLayout>
			</TableRow>
			
		</TableLayout>
	</TableLayout>
</RelativeLayout>
